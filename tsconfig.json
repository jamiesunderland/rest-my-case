{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "removeComments": true,
      "declaration": true,
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "lib": [
        "es5",
        "es6",
        "dom",
        "esnext.asynciterable"
      ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
